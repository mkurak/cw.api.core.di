{
  "name": "cw.api.core.di",
  "version": "1.1.0",
  "main": "./dist/index.js",
  "publishConfig": {
    "access": "public",
    "provenance": true
  },
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "test": "node --experimental-vm-modules ./node_modules/jest/bin/jest.js",
    "test:watch": "node --experimental-vm-modules ./node_modules/jest/bin/jest.js --watch",
    "test:coverage": "node --experimental-vm-modules ./node_modules/jest/bin/jest.js --coverage",
    "lint": "eslint \"src/**/*.ts\" \"tests/**/*.ts\"",
    "lint:fix": "npm run lint -- --fix",
    "format": "prettier \"src/**/*.ts\" \"tests/**/*.ts\" --write",
    "format:check": "prettier \"src/**/*.ts\" \"tests/**/*.ts\" --check",
    "prepare": "npm run build && npm run hooks:install",
    "hooks:install": "node scripts/setup-hooks.mjs",
    "prepublishOnly": "npm run build && node scripts/smoke.mjs",
    "release": "node scripts/release.mjs"
  },
  "keywords": [
    "asynclocalstorage",
    "container",
    "dependency-injection",
    "middleware",
    "module-system",
    "nodejs",
    "typescript"
  ],
  "author": "Mert Kurak",
  "license": "MIT",
  "description": "Dependency injection container for cw API projects.",
  "devDependencies": {
    "@eslint/js": "^9.35.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.5.2",
    "@typescript-eslint/eslint-plugin": "^8.44.0",
    "@typescript-eslint/parser": "^8.44.0",
    "eslint": "^9.35.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "jest": "^30.1.3",
    "prettier": "^3.6.2",
    "ts-jest": "^29.4.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.44.0"
  },
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "dependencies": {
    "cw.helper.colored.console": "^1.2.1",
    "reflect-metadata": "^0.2.2"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mkurak/cw.api.core.di.git"
  },
  "bugs": {
    "url": "https://github.com/mkurak/cw.api.core.di/issues"
  },
  "homepage": "https://github.com/mkurak/cw.api.core.di",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./package.json": "./package.json"
  },
  "sideEffects": false,
  "engines": {
    "node": ">=18"
  }
}
